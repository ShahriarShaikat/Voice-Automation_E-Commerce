      <div
        class="banner-box banner-box2"
        style="background-image: url('img/banner/b10.jpg')"
      >
        <h4>spring/summer</h4>
        <h2>upcoming season</h2>
        <span>The best classic is on sale at cara</span>
        <button class="white">Collection</button>
      </div>
    </section>
    <section id="banner3">
      <div
        class="banner-box"
        style="background-image: url('img/banner/b7.jpg')"
      >
        <h2>SEASONAL SALE</h2>
        <h3>Winter Collection -50% OFF</h3>
      </div>
      <div
        class="banner-box banner-box2"
        style="background-image: url('img/banner/b4.jpg')"
      >
        <h2>SEASONAL SALE</h2>
        <h3>Winter Collection -50% OFF</h3>
      </div>
      <div
        class="banner-box banner-box3"
